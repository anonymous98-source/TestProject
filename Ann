onChange={(e) => {
  let raw = e.target.value.replace(/\D/g, "");
  if (raw.length > 4) raw = raw.slice(0, 4);
  setTempYearInput(raw);

  if (raw.length < 4) {
    setSelectedYear(null);
    return;
  }

  const y = Number(raw);

  if (y >= minYear && y <= maxYear) {
    setSelectedYear(y);
  } else {
    setSelectedYear(null);
  }

  setPickerOpen(true);
}} 
