6ï¸âƒ£ Add Category Dialog (UI Highlight)

AddCategoryDialog.java

package com.fundsmanager.ui;

import com.fundsmanager.model.Category;

import javax.swing.*;
import java.awt.*;

public class AddCategoryDialog extends JDialog {

    private JTextField nameField;
    private JTextField percentField;
    private Category category;

    public AddCategoryDialog(JFrame parent) {
        super(parent, "Add Category", true);
        setSize(300, 200);
        setLocationRelativeTo(parent);
        setLayout(new GridLayout(3, 2, 10, 10));

        add(new JLabel("Category Name:"));
        nameField = new JTextField();
        add(nameField);

        add(new JLabel("Percentage:"));
        percentField = new JTextField();
        add(percentField);

        JButton addBtn = new JButton("Add");
        addBtn.addActionListener(e -> {
            category = new Category(
                    nameField.getText(),
                    Double.parseDouble(percentField.getText())
            );
            dispose();
        });

        add(new JLabel());
        add(addBtn);
    }

    public Category getCategory() {
        return category;
    }
}


