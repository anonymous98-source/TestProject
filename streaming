3ï¸âƒ£ Default Categories

DefaultCategories.java

package com.fundsmanager.util;

import com.fundsmanager.model.Category;
import java.util.ArrayList;
import java.util.List;

public class DefaultCategories {

    public static List<Category> load() {
        List<Category> list = new ArrayList<>();
        list.add(new Category("Necessary Expenses", 40));
        list.add(new Category("Emergency Fund", 10));
        list.add(new Category("Health Emergency", 10));
        list.add(new Category("EMIs", 15));
        list.add(new Category("Savings", 10));
        list.add(new Category("Investments", 10));
        list.add(new Category("Miscellaneous", 5));
        return list;
    }
}


