classDiagram

class User {
    +userId : String
    +name : String
    +role : RoleType
    +login()
    +logout()
}

class Plan {
    +planId : String
    +status : PlanStatus
    +createdDate : Date
    +submittedDate : Date
    +update()
    +submit()
}

class TestingReport {
    +reportId : String
    +status : PlanStatus
}

class InvocationReport {
    +reportId : String
    +status : PlanStatus
}

class AuditLog {
    +logId : String
    +action : String
    +timestamp : Date
    +userId : String
}

class RoleType {
    <<enumeration>>
    MAKER
    CHECKER
    CONTROLLER
    CIRCLE_ADMIN
    ORMD_ADMIN
    SUPER_ADMIN
}

class PlanStatus {
    <<enumeration>>
    DRAFT
    SUBMITTED
    CHECKER_APPROVED
    CONTROLLER_APPROVED
    REJECTED
}

User --> Plan
