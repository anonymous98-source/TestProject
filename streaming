5ï¸âƒ£ Default Category Configuration

DefaultCategories.java

import java.util.List;

public class DefaultCategories {

    public static List<Category> getDefaults() {
        return List.of(
            new Category("Necessary Expenses", 40, false),
            new Category("Emergency Fund", 10, false),
            new Category("Health Emergency Fund", 10, false),
            new Category("EMIs", 15, false),
            new Category("Future Savings", 10, true),
            new Category("Investments", 10, true),
            new Category("Miscellaneous", 5, true)
        );
    }
}

