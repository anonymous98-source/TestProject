4ï¸âƒ£ Business Logic

FundCalculationService.java

package com.fundsmanager.service;

import com.fundsmanager.model.Category;
import com.fundsmanager.model.FundAllocation;

import java.util.ArrayList;
import java.util.List;

public class FundCalculationService {

    public List<FundAllocation> calculate(double income, List<Category> categories) {
        List<FundAllocation> result = new ArrayList<>();
        for (Category c : categories) {
            double amount = income * c.getPercentage() / 100;
            result.add(new FundAllocation(
                    c.getName(),
                    c.getPercentage(),
                    amount
            ));
        }
        return result;
    }

    public boolean validatePercentage(List<Category> categories) {
        double sum = categories.stream()
                .mapToDouble(Category::getPercentage)
                .sum();
        return Math.abs(sum - 100.0) < 0.01;
    }
}


---

5ï¸âƒ£ Table Model (MVC-correct Swing)

CategoryTableModel.java

package com.fundsmanager.ui;

import com.fundsmanager.model.Category;

import javax.swing.table.AbstractTableModel;
import java.util.List;

public class CategoryTableModel extends AbstractTableModel {

    private final String[] columns = {"Category", "Percentage"};
    private List<Category> categories;

    public CategoryTableModel(List<Category> categories) {
        this.categories = categories;
    }

    public int getRowCount() {
        return categories.size();
    }

    public int getColumnCount() {
        return columns.length;
    }

    public String getColumnName(int col) {
        return columns[col];
    }

    public Object getValueAt(int row, int col) {
        Category c = categories.get(row);
        return col == 0 ? c.getName() : c.getPercentage();
    }

    public boolean isCellEditable(int row, int col) {
        return col == 1;
    }

    public void setValueAt(Object value, int row, int col) {
        categories.get(row).setPercentage(Double.parseDouble(value.toString()));
        fireTableCellUpdated(row, col);
    }

    public List<Category> getCategories() {
        return categories;
    }
}


